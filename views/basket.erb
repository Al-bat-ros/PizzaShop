<h2>Вашa карзина</h2>

<!-- <%= @items.inspect %> -->

<table class="table">
      <thead>
        <tr>
          <th>Название пиццы</th>
          <th>Цена</th>
          <th>Количество</th>
        </tr>
      </thead>
      <tbody>
      <% total_price = 0 %>
      <% total_qty = 0 %>

      <% @items.each do |item| %>  
        <tr>
          <td><%= item[0].title %></td>
          <td><%= item[0].price %></td>
          <td><%= item[1] %></td>
        </tr>

        <% total_price += item[0].price * item[1].to_i %>
        <% total_qty += item[1].to_i %>

      <% end %>  

      <tr>
          <td></td>
          <td><%= total_price %></td>
          <td><%= total_qty %></td>
        </tr>

      </tbody>
    </table>

