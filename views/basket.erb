<h2>Вашa карзина</h2>

<!-- <%= @items.inspect %> -->

<table class="table">
      <thead>
        <tr>
          <th>Название пиццы</th>
          <th>Цена</th>
          <th>Количество</th>
        </tr>
      </thead>
      <tbody>
      <% total_price = 0 %>
      <% total_qty = 0 %>

      <% @items.each do |item| %>  
        <tr>
          <td><%= item[0].title %></td>
          <td><%= item[0].price %></td>
          <td><%= item[1] %></td>
        </tr>

        <% total_price += item[0].price * item[1].to_i %>
        <% total_qty += item[1].to_i %>

      <% end %>  

      <tr>
          <td></td>
          <td><%= total_price %></td>
          <td><%= total_qty %></td>
        </tr>

      </tbody>
    </table>


    <form action="/place_order" method="POST" role="form">

      <input type="hidder" name="order[orders_input]" value="<%= @orders_input %>">
  <div class="form-group">
    <label>Ваше имя</label>
    <input name="order[name]" type="text" class="form-control" id="name" placeholder="Введите ваше имя" >
  </div>

  <div class="form-group">
    <label>Ваш телефон</label>
    <input name="order[phone]" type="text" class="form-control" id="phone" placeholder="Введите ваш номер телевона" >
  </div>

  <div class="form-group">
    <label>Адрес доставки</label>
    <textarea name="order[address]" class="form-control" id="data" placeholder="Введите адрес доставки" ></textarea>
  </div>

  <button type="submit" class="btn btn-primary btn-lg">Отправить заказ</button>

</form>

